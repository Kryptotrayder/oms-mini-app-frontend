  <script>
    let answers = {};
    let currentStep = 0;

    function show(id) {
      document.querySelectorAll('#welcome, [id^="step"], #blocked').forEach(el => el.classList.add('hidden'));
      document.getElementById(id).classList.remove('hidden');

      if (id === 'step6') {
        document.getElementById('preview').innerHTML = `
          –ü–æ–ª: ${answers.gender || '‚Äî'}<br>
          –§–ò–û: ${answers.name || '‚Äî'}<br>
          –ü–æ–ª–∏—Å: ${answers.polis || '‚Äî'}<br>
          –î–æ–∫—É–º–µ–Ω—Ç: ${answers.docType || '‚Äî'} ${answers.docNumber || '‚Äî'}<br>
          –¢–µ–ª–µ—Ñ–æ–Ω: ${answers.phone || '‚Äî'}
        `;
      }

      if (id.startsWith('step5')) {
        document.getElementById('docTitle').innerText = `–£–∫–∞–∂–∏—Ç–µ –Ω–æ–º–µ—Ä ${answers.docType === '–ü–∞—Å–ø–æ—Ä—Ç' ? '–ø–∞—Å–ø–æ—Ä—Ç–∞' : '–°–ù–ò–õ–°'}:`;
      }
    }

    function save(key, value) {
      answers[key] = value;
    }

    function saveInput(id, next) {
      const val = document.getElementById(id).value.trim();
      if (!val) return alert('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –ø–æ–ª–µ!');
      save(id, val);
      show(next);
    }

    function prev() {
      if (currentStep > 1) show('step' + (currentStep - 1));
    }

    function finish() {
      answers.phone = document.getElementById('phone').value.trim() || '+7 (–Ω–µ —É–∫–∞–∑–∞–Ω)';
      Telegram.WebApp.sendData(JSON.stringify(answers));
      show('blocked');
    }

    // –ò–º–∏—Ç–∞—Ü–∏—è Telegram.WebApp –¥–ª—è —Ç–µ—Å—Ç–∞ –≤ –±—Ä–∞—É–∑–µ—Ä–µ
    window.Telegram = {
      WebApp: {
        ready: () => console.log('Ready'),
        expand: () => console.log('Expanded'),
        sendData: (data) => alert('–î–∞–Ω–Ω—ã–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω—ã –±–æ—Ç—É:\n' + data)
      }
    };
  </script>
